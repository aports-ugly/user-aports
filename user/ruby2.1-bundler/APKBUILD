# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
_gemname=bundler
_rubyver=2.1
pkgname=ruby$_rubyver-$_gemname
pkgver=1.13.1
pkgrel=0
pkgdesc="Manage an application's gem dependencies (backport for Ruby $_rubyver)"
url="http://gembundler.com/"
arch="noarch"
license="MIT"
depends="ruby$_rubyver"
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

package() {
	local gemdir="$(ruby$_rubyver -rubygems -e 'puts Gem.default_dir')"
	local geminstdir=$gemdir/gems/$_gemname-$pkgver

	mkdir -p "$pkgdir" || return 1

	gem$_rubyver install --local --install-dir "$pkgdir"/$gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$gemdir/cache \
		"$pkgdir"/$geminstdir/ext \
		"$pkgdir"/$geminstdir/.require_paths

	cd "$pkgdir"
	local f; for f in usr/lib/ruby/gems/*/bin/*; do
		if [ -e "$f" ]; then
			mkdir -p "$pkgdir"/usr/bin
			ln -s /$f "$pkgdir"/usr/bin/$(basename "$f")$_rubyver
		fi
	done
}

md5sums="6ccf52b9deccf7292a75d59f6cfc9e6e  bundler-1.13.1.gem"
sha256sums="cf1f6203db06531c7086d3fa3ca8c8e579b2cdd003dd7f4f5063607ef692eb09  bundler-1.13.1.gem"
sha512sums="41ac518f880d07ee660dac0f1399e007fe64b6b98f2adfe9b182560e1834c6d8b49a2de699823e21fa7753cffb2a301dd588bd10a754ea496c057a9791cf0c32  bundler-1.13.1.gem"
