sha512sums="b4b294e9a4dcd3e1563326a928eb5e7735ab35f825ed00bc133c94daa9e306aa3a69d3a5be094d3a432e676afbd10759fd9a1c22645d67b5e5a7e76bb2539c06  .gitconfig
